<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Základní téma aplikace (Světlý režim) -->
    <style name="Theme.NicotineTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primární a sekundární barvy -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Barvy pozadí -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Chybové barvy -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Status bar barva -->
        <item name="android:statusBarColor">@color/primary_variant</item>
        
        <!-- Zaoblené rohy komponentů -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.NicotineTracker.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.NicotineTracker.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.NicotineTracker.LargeComponent</item>
    </style>
    
    <!-- Styly pro zaoblené rohy -->
    <style name="ShapeAppearance.NicotineTracker.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.NicotineTracker.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.NicotineTracker.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>